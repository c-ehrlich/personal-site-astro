---
import { Image } from "@astrojs/image/components";
import { ThemeToggle } from "../components/ThemeToggle";
import "../styles/global.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="flex min-h-screen flex-col gap-4 bg-amber-100 p-4 transition-all duration-300 dark:bg-black"
  >
    <div class="flex w-full justify-between">
      <!-- TODO: why is this image not sharp? -->
      <Image
        class="rounded-full"
        src="avatar.jpg"
        alt="Christopher Ehrlich Avatar"
        width={100}
        height={100}
      />
      <ThemeToggle client:load />
    </div>
    <h1>Hi, I'm Christopher</h1>
    <ul class="flex list-none gap-2">
      <li class="hover:underline"><a href="/">Home</a></li>
      <li class="hover:underline"><a href="projects">Projects</a></li>
      <li class="hover:underline"><a href="blog">Blog</a></li>
      <li class="hover:underline"><a href="contact">Contact</a></li>
    </ul>
    <slot />
  </body>
</html>
