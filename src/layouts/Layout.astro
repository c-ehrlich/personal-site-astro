---
import { Image } from "@astrojs/image/components"
import { ThemeToggle } from '../components/ThemeToggle';
import "../styles/global.css"

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-amber-100 dark:bg-black transition-all duration-300 flex flex-col gap-4 p-4 min-h-screen">
		<div class="flex w-full justify-between">
			<!-- TODO: why is this image not sharp? -->
			<Image src="avatar.jpg" alt="Christopher Ehrlich Avatar" width={100} height={100} />
			<ThemeToggle client:load />
		</div>
		<h1>Hi, I'm Christopher</h1>
		<ul class="flex gap-2 list-none">
			<li class="hover:underline"><a href="/">Home</a></li>
			<li class="hover:underline"><a href="projects">Projects</a></li>
			<li class="hover:underline"><a href="blog">Blog</a></li>
			<li class="hover:underline"><a href="contact">Contact</a></li>
		</ul>
		<slot />
	</body>
</html>
