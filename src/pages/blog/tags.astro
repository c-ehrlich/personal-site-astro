---
import IndexLayout from "../../layouts/index-layout.astro";
import { createBlogTagListWithCount } from "../../util/blogTags";

const tags = await createBlogTagListWithCount();
---

<IndexLayout title="Tags">
  <h2 class="text-4xl">Tags</h2>
  <ul>
    {
      tags.map((tag) => (
        <li>
          <a class="font-semibold" href={`/blog/tag/${tag.tag}`}>
            {tag.tag}
          </a>{" "}
          <span class="text-text/60">
            ‚¶Å {tag.count} {tag.count === 1 ? "post" : "posts"}
          </span>{" "}
        </li>
      ))
    }
  </ul>
</IndexLayout>
