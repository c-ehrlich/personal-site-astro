---
export interface Props {
  tag: string;
  hashtag?: boolean;
  // TODO: type this based on content collections?
  resource?: string;
}
const { tag, hashtag = false, resource }: Props = Astro.props;
---

<a
  class="rounded-[3px] border-2 border-link px-1 text-[11px] font-semibold uppercase hover:bg-link/20 hover:no-underline"
  href={resource ? `/${resource}/tag/${tag}` : null}>{hashtag && "#"}{tag}</a
>
