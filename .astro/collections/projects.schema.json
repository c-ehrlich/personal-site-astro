{
  "$ref": "#/definitions/projects",
  "definitions": {
    "projects": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "published": {
          "type": "string",
          "pattern": "^\\d{4}\\/\\d{2}\\/\\d{2}$"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "image": {
          "type": "string",
          "pattern": "\\/([^\\/^.]+\\/)+[^\\/^.]+\\.(jpg|jpeg|png|gif|webp|svg)$"
        },
        "github": {
          "type": "string",
          "format": "uri"
        },
        "deployed": {
          "type": "string",
          "format": "uri"
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "description",
        "published",
        "tags",
        "image"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}